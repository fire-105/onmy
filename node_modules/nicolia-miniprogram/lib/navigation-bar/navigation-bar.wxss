.navigation-bar__container {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #fff;
}

.navigation-bar__back {
	position: absolute;
	top: 16px;
	left: 16px;
	width: 24px;
	height: 24px;
	cursor: pointer;
}

.navigation-bar__title {
	font-weight: 600;
	font-size: 17px;
	text-transform: capitalize;
}
